<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Rectangle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.nexora.bank.controllers.HomeController"
            stylesheets="@../css/Home.css"
            styleClass="home-root"
            fx:id="rootPane">

    <left>
        <StackPane fx:id="heroPane" styleClass="hero-pane" prefWidth="560" minWidth="560">
            <Pane styleClass="hero-base-layer" mouseTransparent="true"/>

            <Pane fx:id="heroMeshLayer" styleClass="hero-mesh-layer" mouseTransparent="true">
                <Circle fx:id="meshOrb1" styleClass="mesh-orb, mesh-orb-1" radius="200" layoutX="480" layoutY="100"/>
                <Circle fx:id="meshOrb2" styleClass="mesh-orb, mesh-orb-2" radius="180" layoutX="50" layoutY="550"/>
                <Circle fx:id="meshOrb3" styleClass="mesh-orb, mesh-orb-3" radius="140" layoutX="400" layoutY="700"/>
                <Circle fx:id="meshOrb4" styleClass="mesh-orb, mesh-orb-4" radius="100" layoutX="-30" layoutY="200"/>

                <Circle fx:id="glowSpot1" styleClass="glow-spot, glow-spot-accent" radius="80" layoutX="450" layoutY="350"/>
                <Circle fx:id="glowSpot2" styleClass="glow-spot, glow-spot-white" radius="60" layoutX="100" layoutY="400"/>
            </Pane>

            <Pane styleClass="hero-grid-layer" mouseTransparent="true">
                <Line styleClass="grid-line" startX="0" startY="150" endX="560" endY="150"/>
                <Line styleClass="grid-line" startX="0" startY="300" endX="560" endY="300"/>
                <Line styleClass="grid-line" startX="0" startY="450" endX="560" endY="450"/>
                <Line styleClass="grid-line" startX="0" startY="600" endX="560" endY="600"/>
                <Line styleClass="grid-line-v" startX="140" startY="0" endX="140" endY="800"/>
                <Line styleClass="grid-line-v" startX="280" startY="0" endX="280" endY="800"/>
                <Line styleClass="grid-line-v" startX="420" startY="0" endX="420" endY="800"/>
            </Pane>

            <Pane fx:id="heroLinesLayer" styleClass="hero-lines-layer" mouseTransparent="true">
                <Line fx:id="animLine1" styleClass="anim-line, anim-line-1" startX="0" startY="280" endX="560" endY="280"/>
                <Line fx:id="animLine2" styleClass="anim-line, anim-line-2" startX="0" startY="520" endX="560" endY="520"/>
                <Line fx:id="animLine3" styleClass="anim-line, anim-line-3" startX="200" startY="0" endX="200" endY="800"/>
            </Pane>

            <Pane fx:id="heroParticlesLayer" styleClass="hero-particles-layer" mouseTransparent="true">
                <Circle fx:id="particle1" styleClass="particle, particle-glow" radius="5" layoutX="90" layoutY="130"/>
                <Circle fx:id="particle2" styleClass="particle, particle-glow" radius="4" layoutX="250" layoutY="220"/>
                <Circle fx:id="particle3" styleClass="particle, particle-glow" radius="6" layoutX="420" layoutY="180"/>
                <Circle fx:id="particle4" styleClass="particle, particle-glow" radius="3" layoutX="180" layoutY="380"/>
                <Circle fx:id="particle5" styleClass="particle, particle-glow" radius="5" layoutX="480" layoutY="320"/>
                <Circle fx:id="particle6" styleClass="particle, particle-glow" radius="4" layoutX="70" layoutY="500"/>
                <Circle fx:id="particle7" styleClass="particle, particle-glow" radius="5" layoutX="350" layoutY="480"/>
                <Circle fx:id="particle8" styleClass="particle, particle-glow" radius="3" layoutX="500" layoutY="550"/>
                <Circle fx:id="particle9" styleClass="particle, particle-white" radius="4" layoutX="150" layoutY="620"/>
                <Circle fx:id="particle10" styleClass="particle, particle-white" radius="3" layoutX="300" layoutY="580"/>
                <Circle fx:id="particle11" styleClass="particle, particle-white" radius="5" layoutX="450" layoutY="650"/>
                <Circle fx:id="particle12" styleClass="particle, particle-white" radius="3" layoutX="520" layoutY="420"/>

                <Rectangle fx:id="diamond1" styleClass="floating-diamond" width="12" height="12" layoutX="120" layoutY="250" rotate="45"/>
                <Rectangle fx:id="diamond2" styleClass="floating-diamond" width="8" height="8" layoutX="380" layoutY="400" rotate="45"/>
                <Rectangle fx:id="diamond3" styleClass="floating-diamond" width="10" height="10" layoutX="60" layoutY="350" rotate="45"/>
            </Pane>

            <VBox fx:id="heroContent" styleClass="hero-content" spacing="0" alignment="TOP_LEFT">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>

                <HBox fx:id="headerSection" spacing="0" alignment="CENTER_LEFT">
                    <StackPane fx:id="logoComplex" styleClass="logo-complex">
                        <Circle fx:id="logoOuterGlow" styleClass="logo-outer-glow" radius="42"/>
                        <Circle fx:id="logoRing1" styleClass="logo-ring, logo-ring-1" radius="38"/>
                        <Circle fx:id="logoRing2" styleClass="logo-ring, logo-ring-2" radius="34"/>
                        <Circle fx:id="logoRing3" styleClass="logo-ring, logo-ring-3" radius="30"/>
                        <StackPane styleClass="logo-inner-container">
                            <Circle styleClass="logo-inner-bg" radius="24"/>
                            <ImageView fx:id="logoImage" fitWidth="28" fitHeight="28" preserveRatio="true">
                                <Image url="@../images/logo.png"/>
                            </ImageView>
                        </StackPane>
                    </StackPane>

                    <Region prefWidth="18"/>

                    <VBox spacing="3" alignment="CENTER_LEFT">
                        <HBox fx:id="brandLettersContainer" spacing="3" alignment="CENTER_LEFT">
                            <Label fx:id="brandN" text="N" styleClass="brand-letter"/>
                            <Label fx:id="brandE" text="E" styleClass="brand-letter"/>
                            <Label fx:id="brandX" text="X" styleClass="brand-letter, brand-letter-accent"/>
                            <Label fx:id="brandO" text="O" styleClass="brand-letter"/>
                            <Label fx:id="brandR" text="R" styleClass="brand-letter"/>
                            <Label fx:id="brandA" text="A" styleClass="brand-letter"/>
                        </HBox>
                        <HBox spacing="6" alignment="CENTER_LEFT">
                            <Rectangle styleClass="brand-line" width="20" height="2"/>
                            <Label text="BANKING PLATFORM" styleClass="brand-tagline"/>
                        </HBox>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <HBox fx:id="statusIndicator" styleClass="status-indicator" spacing="10" alignment="CENTER">
                        <StackPane>
                            <Circle fx:id="statusPulse" styleClass="status-pulse" radius="12"/>
                            <Circle fx:id="statusDot" styleClass="status-dot" radius="6"/>
                        </StackPane>
                        <VBox spacing="1" alignment="CENTER_LEFT">
                            <Label text="SYSTEM" styleClass="status-label"/>
                            <Label text="Online" styleClass="status-value"/>
                        </VBox>
                    </HBox>
                </HBox>

                <Region VBox.vgrow="ALWAYS" minHeight="40"/>

                <HBox alignment="CENTER_LEFT">
                    <HBox fx:id="heroBadge" styleClass="hero-badge" spacing="10" alignment="CENTER">
                        <StackPane styleClass="badge-icon-container">
                            <Circle styleClass="badge-icon-bg" radius="12"/>
                            <FontIcon iconLiteral="fas-star" styleClass="badge-icon"/>
                        </StackPane>
                        <Label text="Enterprise Banking Solution" styleClass="badge-text"/>
                        <Rectangle styleClass="badge-shine" width="30" height="100"/>
                    </HBox>
                </HBox>

                <Region minHeight="22"/>

                <VBox fx:id="heroTitleContainer" spacing="8">
                    <Label fx:id="heroTitle1" text="Next Generation" styleClass="hero-title, hero-title-1"/>
                    <HBox spacing="14" alignment="CENTER_LEFT">
                        <Label fx:id="heroTitle2" text="Banking" styleClass="hero-title, hero-title-2"/>
                        <StackPane fx:id="titleAccentBox" styleClass="title-accent-container">
                            <Rectangle styleClass="title-accent-bg" width="210" height="64" arcWidth="12" arcHeight="12"/>
                            <Rectangle fx:id="titleAccentShine" styleClass="title-accent-shine" width="40" height="100"/>
                            <Label text="Platform" styleClass="title-accent-text"/>
                        </StackPane>
                    </HBox>
                </VBox>

                <Region minHeight="20"/>

                <VBox fx:id="heroDescContainer" spacing="0">
                    <Label fx:id="heroDesc"
                           styleClass="hero-description"
                           wrapText="true"
                           text="Experience the future of financial management. Our comprehensive platform empowers your team with real-time insights, seamless transactions, and enterprise-grade security protocols."/>
                </VBox>

                <Region minHeight="32"/>

                <HBox fx:id="statsContainer" styleClass="stats-container" spacing="0" alignment="CENTER">
                    <VBox styleClass="stat-box" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <StackPane styleClass="stat-icon-container">
                            <Circle styleClass="stat-icon-bg" radius="18"/>
                            <FontIcon iconLiteral="fas-exchange-alt" styleClass="stat-emoji"/>
                        </StackPane>
                        <Region minHeight="8"/>
                        <HBox alignment="CENTER" spacing="2">
                            <Label fx:id="statValue1" text="0" styleClass="stat-value"/>
                            <Label text="M+" styleClass="stat-suffix"/>
                        </HBox>
                        <Label text="Transactions" styleClass="stat-label"/>
                        <Region minHeight="8"/>
                        <StackPane styleClass="stat-bar-container" maxWidth="70">
                            <Rectangle styleClass="stat-bar-bg" width="70" height="4" arcWidth="4" arcHeight="4"/>
                            <Rectangle fx:id="statBar1" styleClass="stat-bar-fill" width="0" height="4" arcWidth="4" arcHeight="4"/>
                        </StackPane>
                    </VBox>

                    <StackPane styleClass="stat-divider-container">
                        <Rectangle styleClass="stat-divider" width="1" height="80"/>
                    </StackPane>

                    <VBox styleClass="stat-box" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <StackPane styleClass="stat-icon-container">
                            <Circle styleClass="stat-icon-bg" radius="18"/>
                            <FontIcon iconLiteral="fas-users" styleClass="stat-emoji"/>
                        </StackPane>
                        <Region minHeight="8"/>
                        <HBox alignment="CENTER" spacing="2">
                            <Label fx:id="statValue2" text="0" styleClass="stat-value"/>
                            <Label text="K+" styleClass="stat-suffix"/>
                        </HBox>
                        <Label text="Active Users" styleClass="stat-label"/>
                        <Region minHeight="8"/>
                        <StackPane styleClass="stat-bar-container" maxWidth="70">
                            <Rectangle styleClass="stat-bar-bg" width="70" height="4" arcWidth="4" arcHeight="4"/>
                            <Rectangle fx:id="statBar2" styleClass="stat-bar-fill" width="0" height="4" arcWidth="4" arcHeight="4"/>
                        </StackPane>
                    </VBox>

                    <StackPane styleClass="stat-divider-container">
                        <Rectangle styleClass="stat-divider" width="1" height="80"/>
                    </StackPane>

                    <VBox styleClass="stat-box" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <StackPane styleClass="stat-icon-container">
                            <Circle styleClass="stat-icon-bg" radius="18"/>
                            <FontIcon iconLiteral="fas-bolt" styleClass="stat-emoji"/>
                        </StackPane>
                        <Region minHeight="8"/>
                        <HBox alignment="CENTER" spacing="2">
                            <Label fx:id="statValue3" text="0" styleClass="stat-value"/>
                            <Label text="\%" styleClass="stat-suffix"/>
                        </HBox>
                        <Label text="Uptime SLA" styleClass="stat-label"/>
                        <Region minHeight="8"/>
                        <StackPane styleClass="stat-bar-container" maxWidth="70">
                            <Rectangle styleClass="stat-bar-bg" width="70" height="4" arcWidth="4" arcHeight="4"/>
                            <Rectangle fx:id="statBar3" styleClass="stat-bar-fill" width="0" height="4" arcWidth="4" arcHeight="4"/>
                        </StackPane>
                    </VBox>
                </HBox>

                <Region minHeight="28"/>

                <HBox fx:id="featureCardsRow" spacing="14" alignment="CENTER">
                    <VBox fx:id="featureCard1" styleClass="feature-card" spacing="0" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <StackPane styleClass="feature-card-glow"/>
                        <VBox styleClass="feature-card-content" spacing="10" alignment="CENTER">
                            <StackPane styleClass="feature-icon-container">
                                <Circle styleClass="feature-icon-ring, feature-icon-ring-1" radius="26"/>
                                <Circle styleClass="feature-icon-ring, feature-icon-ring-2" radius="22"/>
                                <StackPane styleClass="feature-icon-inner">
                                    <FontIcon iconLiteral="fas-shield-alt" styleClass="feature-emoji"/>
                                </StackPane>
                            </StackPane>
                            <Label text="Security" styleClass="feature-card-title"/>
                            <Label text="256-bit AES" styleClass="feature-card-desc"/>
                        </VBox>
                    </VBox>

                    <VBox fx:id="featureCard2" styleClass="feature-card" spacing="0" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <StackPane styleClass="feature-card-glow"/>
                        <VBox styleClass="feature-card-content" spacing="10" alignment="CENTER">
                            <StackPane styleClass="feature-icon-container">
                                <Circle styleClass="feature-icon-ring, feature-icon-ring-1" radius="26"/>
                                <Circle styleClass="feature-icon-ring, feature-icon-ring-2" radius="22"/>
                                <StackPane styleClass="feature-icon-inner">
                                    <FontIcon iconLiteral="fas-tachometer-alt" styleClass="feature-emoji"/>
                                </StackPane>
                            </StackPane>
                            <Label text="Speed" styleClass="feature-card-title"/>
                            <Label text="Instant Sync" styleClass="feature-card-desc"/>
                        </VBox>
                    </VBox>

                    <VBox fx:id="featureCard3" styleClass="feature-card" spacing="0" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <StackPane styleClass="feature-card-glow"/>
                        <VBox styleClass="feature-card-content" spacing="10" alignment="CENTER">
                            <StackPane styleClass="feature-icon-container">
                                <Circle styleClass="feature-icon-ring, feature-icon-ring-1" radius="26"/>
                                <Circle styleClass="feature-icon-ring, feature-icon-ring-2" radius="22"/>
                                <StackPane styleClass="feature-icon-inner">
                                    <FontIcon iconLiteral="fas-chart-line" styleClass="feature-emoji"/>
                                </StackPane>
                            </StackPane>
                            <Label text="Analytics" styleClass="feature-card-title"/>
                            <Label text="AI Insights" styleClass="feature-card-desc"/>
                        </VBox>
                    </VBox>
                </HBox>

                <Region VBox.vgrow="ALWAYS" minHeight="24"/>

                <HBox fx:id="trustBadgesBar" styleClass="trust-badges-bar" spacing="0" alignment="CENTER">
                    <HBox styleClass="trust-badge-item" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <StackPane styleClass="trust-check-container">
                            <Circle styleClass="trust-check-bg" radius="10"/>
                            <FontIcon iconLiteral="fas-check" styleClass="trust-check"/>
                        </StackPane>
                        <Label text="SOC 2 Type II" styleClass="trust-text"/>
                    </HBox>
                    <Rectangle styleClass="trust-divider" width="1" height="24"/>
                    <HBox styleClass="trust-badge-item" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <StackPane styleClass="trust-check-container">
                            <Circle styleClass="trust-check-bg" radius="10"/>
                            <FontIcon iconLiteral="fas-check" styleClass="trust-check"/>
                        </StackPane>
                        <Label text="GDPR Ready" styleClass="trust-text"/>
                    </HBox>
                    <Rectangle styleClass="trust-divider" width="1" height="24"/>
                    <HBox styleClass="trust-badge-item" spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <StackPane styleClass="trust-check-container">
                            <Circle styleClass="trust-check-bg" radius="10"/>
                            <FontIcon iconLiteral="fas-check" styleClass="trust-check"/>
                        </StackPane>
                        <Label text="PCI DSS" styleClass="trust-text"/>
                    </HBox>
                </HBox>
            </VBox>
        </StackPane>
    </left>

    <center>
        <StackPane fx:id="centerPane" styleClass="center-pane">
            <Pane fx:id="centerBgLayer" styleClass="center-bg-layer" mouseTransparent="true">
                <Circle fx:id="centerOrb1" styleClass="center-orb, center-orb-1" radius="320" layoutX="650" layoutY="580"/>
                <Circle fx:id="centerOrb2" styleClass="center-orb, center-orb-2" radius="240" layoutX="80" layoutY="100"/>
                <Circle fx:id="centerOrb3" styleClass="center-orb, center-orb-3" radius="160" layoutX="700" layoutY="50"/>

                <Line styleClass="center-grid-line" startX="200" startY="0" endX="200" endY="800"/>
                <Line styleClass="center-grid-line" startX="400" startY="0" endX="400" endY="800"/>
                <Line styleClass="center-grid-line" startX="600" startY="0" endX="600" endY="800"/>
                <Line styleClass="center-grid-line-h" startX="0" startY="200" endX="800" endY="200"/>
                <Line styleClass="center-grid-line-h" startX="0" startY="400" endX="800" endY="400"/>
                <Line styleClass="center-grid-line-h" startX="0" startY="600" endX="800" endY="600"/>

                <Circle fx:id="centerParticle1" styleClass="center-particle" radius="4" layoutX="150" layoutY="200"/>
                <Circle fx:id="centerParticle2" styleClass="center-particle" radius="3" layoutX="350" layoutY="150"/>
                <Circle fx:id="centerParticle3" styleClass="center-particle" radius="5" layoutX="550" layoutY="250"/>
                <Circle fx:id="centerParticle4" styleClass="center-particle" radius="3" layoutX="650" layoutY="400"/>
                <Circle fx:id="centerParticle5" styleClass="center-particle" radius="4" layoutX="250" layoutY="500"/>
            </Pane>

            <VBox alignment="CENTER" spacing="36">
                <StackPane fx:id="mainCardStack">
                    <Rectangle fx:id="cardShadow" styleClass="card-shadow" width="500" height="560" arcWidth="36" arcHeight="36"/>
                    <Rectangle fx:id="cardGlow" styleClass="card-glow" width="500" height="560" arcWidth="36" arcHeight="36"/>

                    <VBox fx:id="welcomeCard" styleClass="welcome-card" spacing="0" alignment="CENTER">
                        <padding>
                            <Insets top="50" right="55" bottom="50" left="55"/>
                        </padding>

                        <StackPane styleClass="card-top-accent">
                            <Rectangle styleClass="card-top-line-bg" width="100" height="4" arcWidth="4" arcHeight="4"/>
                            <Rectangle fx:id="cardTopLineShine" styleClass="card-top-line-shine" width="100" height="4" arcWidth="4" arcHeight="4"/>
                        </StackPane>

                        <Region minHeight="32"/>

                        <StackPane fx:id="welcomeIconStack" styleClass="welcome-icon-stack">
                            <Circle fx:id="iconPulse1" styleClass="icon-pulse, icon-pulse-1" radius="65"/>
                            <Circle fx:id="iconPulse2" styleClass="icon-pulse, icon-pulse-2" radius="58"/>
                            <Circle fx:id="iconPulse3" styleClass="icon-pulse, icon-pulse-3" radius="51"/>
                            <Circle styleClass="icon-ring-static, icon-ring-static-1" radius="48"/>
                            <Circle styleClass="icon-ring-static, icon-ring-static-2" radius="44"/>
                            <StackPane styleClass="welcome-icon-inner">
                                <Circle styleClass="welcome-icon-bg" radius="36"/>
                                <FontIcon iconLiteral="fas-university" styleClass="welcome-icon-emoji"/>
                            </StackPane>
                        </StackPane>

                        <Region minHeight="28"/>

                        <VBox spacing="10" alignment="CENTER">
                            <Label fx:id="welcomeTitle" text="Welcome Back" styleClass="welcome-title"/>
                            <Label fx:id="welcomeSubtitle" text="Access your secure banking dashboard" styleClass="welcome-subtitle"/>
                        </VBox>

                        <Region minHeight="32"/>

                        <StackPane fx:id="loginBtnStack" styleClass="btn-stack" maxWidth="340">
                            <Rectangle fx:id="loginBtnGlow" styleClass="btn-glow-primary" width="340" height="58" arcWidth="16" arcHeight="16"/>
                            <Rectangle fx:id="loginBtnShine" styleClass="btn-shine" width="340" height="58" arcWidth="16" arcHeight="16"/>
                            <Button fx:id="loginBtn" styleClass="btn, btn-primary" onAction="#openLogin" maxWidth="Infinity" prefHeight="58">
                                <graphic>
                                    <HBox spacing="12" alignment="CENTER">
                                        <FontIcon iconLiteral="fas-sign-in-alt" styleClass="btn-arrow"/>
                                        <Label text="Sign In to Dashboard" styleClass="btn-text"/>
                                    </HBox>
                                </graphic>
                            </Button>
                        </StackPane>

                        <Region minHeight="14"/>

                        <Region minHeight="22"/>

                        <HBox alignment="CENTER" spacing="16" maxWidth="340">
                            <StackPane HBox.hgrow="ALWAYS">
                                <Rectangle styleClass="divider-line" height="1" width="1000"/>
                            </StackPane>
                            <Label text="New to Nexora?" styleClass="divider-text"/>
                            <StackPane HBox.hgrow="ALWAYS">
                                <Rectangle styleClass="divider-line" height="1" width="1000"/>
                            </StackPane>
                        </HBox>

                        <Region minHeight="22"/>

                        <StackPane fx:id="signupBtnStack" styleClass="btn-stack" maxWidth="340">
                            <Button fx:id="signupBtn" styleClass="btn, btn-outline" onAction="#openSignup" maxWidth="Infinity" prefHeight="58">
                                <graphic>
                                    <HBox spacing="12" alignment="CENTER">
                                        <FontIcon iconLiteral="fas-user-plus" styleClass="btn-plus"/>
                                        <Label text="start with us" styleClass="btn-outline-text"/>
                                    </HBox>
                                </graphic>
                            </Button>
                        </StackPane>

                        <Region minHeight="32"/>

                        <HBox fx:id="securityBadge" styleClass="security-badge" spacing="14" alignment="CENTER">
                            <StackPane styleClass="security-icon-stack">
                                <Circle styleClass="security-icon-pulse" radius="20"/>
                                <Circle styleClass="security-icon-bg" radius="16"/>
                                <FontIcon iconLiteral="fas-lock" styleClass="security-emoji"/>
                            </StackPane>
                            <VBox spacing="2" alignment="CENTER_LEFT">
                                <Label text="Enterprise-Grade Security" styleClass="security-title"/>
                                <Label text="256-bit AES encryption - Zero-trust architecture" styleClass="security-desc"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </StackPane>

                <HBox fx:id="featurePillsRow" spacing="16" alignment="CENTER">
                    <HBox fx:id="pill1" styleClass="feature-pill" spacing="14" alignment="CENTER">
                        <StackPane styleClass="pill-icon-stack">
                            <Circle styleClass="pill-icon-bg" radius="22"/>
                            <FontIcon iconLiteral="fas-rocket" styleClass="pill-emoji"/>
                        </StackPane>
                        <VBox spacing="2" alignment="CENTER_LEFT">
                            <Label text="Quick Setup" styleClass="pill-title"/>
                            <Label text="Ready in 2 minutes" styleClass="pill-desc"/>
                        </VBox>
                        <Rectangle styleClass="pill-shine" width="20" height="100"/>
                    </HBox>

                    <HBox fx:id="pill2" styleClass="feature-pill" spacing="14" alignment="CENTER">
                        <StackPane styleClass="pill-icon-stack">
                            <Circle styleClass="pill-icon-bg" radius="22"/>
                            <FontIcon iconLiteral="fas-chart-line" styleClass="pill-emoji"/>
                        </StackPane>
                        <VBox spacing="2" alignment="CENTER_LEFT">
                            <Label text="Live Analytics" styleClass="pill-title"/>
                            <Label text="Real-time insights" styleClass="pill-desc"/>
                        </VBox>
                        <Rectangle styleClass="pill-shine" width="20" height="100"/>
                    </HBox>

                    <HBox fx:id="pill3" styleClass="feature-pill" spacing="14" alignment="CENTER">
                        <StackPane styleClass="pill-icon-stack">
                            <Circle styleClass="pill-icon-bg" radius="22"/>
                            <FontIcon iconLiteral="fas-user-shield" styleClass="pill-emoji"/>
                        </StackPane>
                        <VBox spacing="2" alignment="CENTER_LEFT">
                            <Label text="Zero Trust" styleClass="pill-title"/>
                            <Label text="Maximum security" styleClass="pill-desc"/>
                        </VBox>
                        <Rectangle styleClass="pill-shine" width="20" height="100"/>
                    </HBox>
