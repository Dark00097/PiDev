<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.nexora.bank.controllers.CashbackController"
      stylesheets="@../css/Cashback.css"
      styleClass="nx-entity-container" spacing="24">

    <!-- ============================================= -->
    <!-- STAT CARDS (Mini Dashboard) -->
    <!-- ============================================= -->
    <HBox spacing="24" styleClass="nx-stats-row">
        <!-- Stat Card 1: Total Cashback Distribue -->
        <VBox styleClass="nx-stat-card" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="16">
                <StackPane styleClass="nx-stat-card-icon, nx-stat-card-icon-gold">
                    <SVGPath content="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"/>
                </StackPane>
                <VBox spacing="4">
                    <Label fx:id="lblTotalCashback" text="0.00 DT" styleClass="nx-stat-card-value"/>
                    <Label text="Total Cashback Distribue" styleClass="nx-stat-card-label"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER_RIGHT">
                    <Label text="+22%" styleClass="nx-stat-badge, nx-stat-badge-success"/>
                </VBox>
            </HBox>
        </VBox>

        <!-- Stat Card 2: Nombre de Beneficiaires -->
        <VBox styleClass="nx-stat-card" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="16">
                <StackPane styleClass="nx-stat-card-icon, nx-stat-card-icon-teal">
                    <SVGPath content="M17 20h5v-2a3 3 0 0 0-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 0 1 5.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 0 1 9.288 0M15 7a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                </StackPane>
                <VBox spacing="4">
                    <Label fx:id="lblNombreBeneficiaires" text="0" styleClass="nx-stat-card-value"/>
                    <Label text="Nombre de Beneficiaires" styleClass="nx-stat-card-label"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER_RIGHT">
                    <Label text="+15%" styleClass="nx-stat-badge, nx-stat-badge-success"/>
                </VBox>
            </HBox>
        </VBox>

        <!-- Stat Card 3: Cashback du Mois -->
        <VBox styleClass="nx-stat-card" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="16">
                <StackPane styleClass="nx-stat-card-icon, nx-stat-card-icon-blue">
                    <SVGPath content="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2z"/>
                </StackPane>
                <VBox spacing="4">
                    <Label fx:id="lblCashbackMois" text="0.00 DT" styleClass="nx-stat-card-value"/>
                    <Label text="Cashback du Mois" styleClass="nx-stat-card-label"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER_RIGHT">
                    <Label text="+8%" styleClass="nx-stat-badge, nx-stat-badge-success"/>
                </VBox>
            </HBox>
        </VBox>
    </HBox>

    <!-- ============================================= -->
    <!-- MAIN CONTENT: FORM + TABLE -->
    <!-- ============================================= -->
    <HBox spacing="24" VBox.vgrow="ALWAYS">
        
        <!-- ============================================= -->
        <!-- FORM SECTION -->
        <!-- ============================================= -->
        <VBox styleClass="nx-card" prefWidth="560" minWidth="560" spacing="0">
            <!-- Form Header -->
            <HBox styleClass="nx-card-header" alignment="CENTER_LEFT" spacing="12">
                <StackPane styleClass="nx-card-header-icon, nx-card-header-icon-gold">
                    <SVGPath content="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2"/>
                </StackPane>
                <VBox spacing="2">
                    <Label text="Cashback" styleClass="nx-card-title"/>
                    <Label text="Gerer les cashbacks des clients" styleClass="nx-card-subtitle"/>
                </VBox>
            </HBox>

            <!-- Form Body -->
            <ScrollPane styleClass="nx-form-scroll" fitToWidth="true" VBox.vgrow="ALWAYS">
                <VBox styleClass="nx-card-body" spacing="16">
                    
                    <!-- Montant Achat -->
                    <VBox styleClass="nx-form-group" spacing="8">
                        <Label text="Montant de l'Achat (DT)" styleClass="nx-label, nx-label-required"/>
                        <HBox styleClass="nx-input-wrapper">
                            <SVGPath content="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-8 2a2 2 0 1 1-4 0 2 2 0 0 1 4 0z" styleClass="nx-input-icon"/>
                            <TextField fx:id="txtMontantAchat" promptText="Ex: 150.00" styleClass="nx-input" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>

                    <!-- Taux Applique -->
                    <VBox styleClass="nx-form-group" spacing="8">
                        <Label text="Taux Applique (%)" styleClass="nx-label, nx-label-required"/>
                        <HBox styleClass="nx-input-wrapper">
                            <SVGPath content="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 0 0-2-2H7a2 2 0 0 0-2 2v16" styleClass="nx-input-icon"/>
                            <TextField fx:id="txtTauxApplique" promptText="Ex: 5" styleClass="nx-input" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>

                    <!-- Montant Cashback (Auto-calcule) -->
                    <VBox styleClass="nx-form-group" spacing="8">
                        <Label text="Montant Cashback (DT)" styleClass="nx-label"/>
                        <HBox styleClass="nx-input-wrapper, nx-input-calculated">
                            <SVGPath content="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8V7m0 1v8m0 0v1" styleClass="nx-input-icon"/>
                            <TextField fx:id="txtMontantCashback" promptText="Calcule automatiquement" styleClass="nx-input, nx-input-calculated" HBox.hgrow="ALWAYS" editable="false"/>
                        </HBox>
                        <Label text="Calcule automatiquement: Montant  Taux / 100" styleClass="nx-helper-text"/>
                    </VBox>

                    <!-- Date Achat -->
                    <VBox styleClass="nx-form-group" spacing="8">
                        <Label text="Date d'Achat" styleClass="nx-label, nx-label-required"/>
                        <HBox styleClass="nx-input-wrapper">
                            <SVGPath content="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2z" styleClass="nx-input-icon"/>
                            <DatePicker fx:id="dpDateAchat" promptText="Selectionner une date" styleClass="nx-datepicker" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>

                    <!-- Date Credit -->
                    <VBox styleClass="nx-form-group" spacing="8">
                        <Label text="Date de Credit" styleClass="nx-label"/>
                        <HBox styleClass="nx-input-wrapper">
                            <SVGPath content="M9 12l2 2 4-4m6 2a9 9 0 1 1-18 0 9 9 0 0 1 18 0z" styleClass="nx-input-icon"/>
                            <DatePicker fx:id="dpDateCredit" promptText="Date de credit du cashback" styleClass="nx-datepicker" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>

                    <!-- Date Expiration -->
                    <VBox styleClass="nx-form-group" spacing="8">
                        <Label text="Date d'Expiration" styleClass="nx-label"/>
                        <HBox styleClass="nx-input-wrapper">
                            <SVGPath content="M12 8v4l3 3m6-3a9 9 0 1 1-18 0 9 9 0 0 1 18 0z" styleClass="nx-input-icon"/>
                            <DatePicker fx:id="dpDateExpiration" promptText="Date d'expiration" styleClass="nx-datepicker" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>

                    <!-- Statut -->
                    <VBox styleClass="nx-form-group" spacing="8">
                        <Label text="Statut" styleClass="nx-label, nx-label-required"/>
                        <ComboBox fx:id="cmbStatut" promptText="Selectionner un statut" styleClass="nx-select" maxWidth="Infinity">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="En attente"/>
                                    <String fx:value="Valide"/>
                                    <String fx:value="Credite"/>
                                    <String fx:value="Expire"/>
                                    <String fx:value="Annule"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <!-- Partenaire (Reference) -->
                    <VBox styleClass="nx-form-group" spacing="8">
                        <Label text="Partenaire" styleClass="nx-label"/>
                        <ComboBox fx:id="cmbPartenaire" promptText="Selectionner un partenaire" styleClass="nx-select" maxWidth="Infinity">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Carrefour"/>
                                    <String fx:value="Zara"/>
                                    <String fx:value="Technopolis"/>
                                    <String fx:value="Pizza Hut"/>
                                    <String fx:value="Tunisair"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>
                </VBox>
            </ScrollPane>

            <!-- Form Footer with Buttons -->
            <HBox styleClass="nx-card-footer" spacing="12" alignment="CENTER_RIGHT">
                <Button fx:id="btnAnnuler" text="Annuler" styleClass="nx-btn, nx-btn-outline" onAction="#handleAnnuler">
                    <graphic>
                        <SVGPath content="M6 18L18 6M6 6l12 12" styleClass="nx-btn-icon"/>
                    </graphic>
                </Button>
                <Button fx:id="btnSupprimer" text="Supprimer" styleClass="nx-btn, nx-btn-danger" onAction="#handleSupprimer">
                    <graphic>
                        <SVGPath content="M19 7l-.867 12.142A2 2 0 0 1 16.138 21H7.862a2 2 0 0 1-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v3M4 7h16" styleClass="nx-btn-icon"/>
                    </graphic>
                </Button>
                <Button fx:id="btnAjouter" text="Ajouter" styleClass="nx-btn, nx-btn-primary" onAction="#handleAjouter">
                    <graphic>
                        <SVGPath content="M12 5v14M5 12h14" styleClass="nx-btn-icon"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>

        <!-- ============================================= -->
        <!-- TABLE SECTION -->
        <!-- ============================================= -->
        <VBox styleClass="nx-card" HBox.hgrow="ALWAYS" spacing="0">
            <!-- Table Header -->
            <HBox styleClass="nx-card-header" alignment="CENTER_LEFT" spacing="16">
                <VBox spacing="2" HBox.hgrow="ALWAYS">
                    <Label text="Historique Cashback" styleClass="nx-card-title"/>
                    <Label text="Tous les cashbacks des clients" styleClass="nx-card-subtitle"/>
                </VBox>

                <HBox styleClass="nx-table-search" alignment="CENTER_LEFT" spacing="8">
                    <SVGPath content="M21 21l-6-6m2-5a7 7 0 1 1-14 0 7 7 0 0 1 14 0z" styleClass="nx-search-icon-sm"/>
                    <TextField fx:id="txtRecherche" promptText="Rechercher..." styleClass="nx-search-input-sm" prefWidth="200"/>
                </HBox>

                <MenuButton text="Trier" styleClass="nx-btn, nx-btn-outline-sm">
                    <items>
                        <MenuItem text="Par Date Achat" onAction="#trierParDateAchat"/>
                        <MenuItem text="Par Montant" onAction="#trierParMontant"/>
                        <MenuItem text="Par Cashback" onAction="#trierParCashback"/>
                        <MenuItem text="Par Statut" onAction="#trierParStatut"/>
                    </items>
                </MenuButton>

                <Button text="Export PDF" styleClass="nx-btn, nx-btn-secondary-sm" onAction="#exporterPDF"/>
            </HBox>

            <!-- Table Body -->
            <VBox styleClass="nx-table-container" VBox.vgrow="ALWAYS">
                <TableView fx:id="tableCashbacks" styleClass="nx-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colPartenaire" text="Partenaire" prefWidth="120"/>
                        <TableColumn fx:id="colMontantAchat" text="Montant Achat" prefWidth="120"/>
                        <TableColumn fx:id="colTaux" text="Taux" prefWidth="70"/>
                        <TableColumn fx:id="colMontantCashback" text="Cashback" prefWidth="100"/>
                        <TableColumn fx:id="colDateAchat" text="Date Achat" prefWidth="100"/>
                        <TableColumn fx:id="colDateCredit" text="Date Credit" prefWidth="100"/>
                        <TableColumn fx:id="colDateExpiration" text="Expiration" prefWidth="100"/>
                        <TableColumn fx:id="colStatut" text="Statut" prefWidth="100"/>
                        <TableColumn fx:id="colActions" text="Actions" prefWidth="100"/>
                    </columns>
                    <placeholder>
                        <VBox alignment="CENTER" spacing="16" styleClass="nx-table-empty">
                            <SVGPath content="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2" styleClass="nx-empty-icon"/>
                            <Label text="Aucun cashback trouve" styleClass="nx-empty-title"/>
                            <Label text="Les cashbacks apparaitront ici" styleClass="nx-empty-subtitle"/>
                        </VBox>
                    </placeholder>
                </TableView>
            </VBox>

            <!-- Table Footer -->
            <HBox styleClass="nx-card-footer, nx-table-footer" alignment="CENTER" spacing="16">
                <Label fx:id="lblTableInfo" text="Affichage de 0 entrees" styleClass="nx-table-info"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Envoyer SMS" styleClass="nx-btn, nx-btn-gold" onAction="#envoyerSMS"/>
                <HBox styleClass="nx-pagination" spacing="4">
                    <Button text="1" styleClass="nx-page-btn, nx-page-btn-active"/>
                    <Button text="2" styleClass="nx-page-btn"/>
                </HBox>
            </HBox>
        </VBox>
    </HBox>
</VBox>

